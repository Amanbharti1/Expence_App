<div class="col-md-4 mb-4">
<div class="card h-100" style="width: 15rem;">
<% if expense.receipt.attached? %>
<%= image_tag expense.receipt, size: "200x200",class:"card-img-top",style:"height:200px" %>
  <% else %>
    No receipt uploaded.
  <% end %>
</p>
  <div class="card-body">
    <h5 class="card-title"><%= expense.title %>&nbsp; </h5>
    <h6 class="card-subtitle mb-2 text-muted">$<%= expense.amount %></h6>
    <p class="card-text"><%= expense.description %></p>
    
    <%= link_to "Show this expense", expense ,class:"btn btn-primary" %>
    
  </div>
  <div class="card-footer">
      <small class="text-muted"><%= expense.date %></small>
  </div>
</div>
</div>




